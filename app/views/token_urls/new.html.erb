<% title format(Translation.t('token_urls_request_title'), notice_title: @notice.title).html_safe %>

<article class="notice-request-access">
  <section class="body">
    <%= Translation.t('token_urls_request_info') %>

    <%= simple_form_for(@token_url) do |f| %>
      <%= f.error_notification %>
      <%= f.hidden_field :notice_id, value: @notice.id %>

      <div class="form-inputs">
        <%= f.input :email, label: Translation.t('token_urls_request_email'), required: true %>
        <%= f.input :documents_notification, as: :boolean, inline_label: Translation.t('token_urls_request_doc_notifications'), label: false %>

        <%= recaptcha_tags %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Submit' %>
      </div>
    <% end %>
  </section>
</article>
