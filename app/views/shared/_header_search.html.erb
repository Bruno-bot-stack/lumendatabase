<header class="app search-header">
  <%= render "shared/header_nav" %> 
  <div class="container search header-bar">
    <%= render 'shared/search' %>
  </div>
  <%= form_tag(@search_index_path, method: :get) do %>
    <div class="container advanced-search">
      <div class="width-wrapper">
        <h5><%= Translation.t('search_advanced') %></h5>
        <% @searchable_fields.each do |field| %>
          <%= render field %>
        <% end %>
        <a id="duplicate-field" href="javascript:void(0);" class="add-group"><%= Translation.t('search_advanced_addmore') %></a>
        <div class="resubmit">
          <button class="button adv-search-submit" type="submit"><%= Translation.t('search_advanced_submit') %></button>
        </div>
      </div>
    </div>
    <%= hidden_field_tag(:sort_by, params[:sort_by], class: 'sort_by_field', id: nil) %>
  <% end %>
</header>
