<section class="notice-body">
  <% if notice.body.present? %>
    <h5 class="title"><%= notice.customizations&.fetch('body_field_label') || 'Legal Complaint' %></h5>
    <p class="body"><pre><%= notice.redacted(:body) %></pre></p>
  <% end %>

  <% if notice.local_jurisdiction_laws.present? %>
    <h5 class="title">Local Jurisdiction Laws</h5>
    <p class="body"><pre><%= notice.redacted(:local_jurisdiction_laws) %></pre></p>
  <% end %>
</section>

<%= render 'works', notice: notice %>
