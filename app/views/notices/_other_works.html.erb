<section class="works">
  <ol id="works" class="copyright-claims">
    <% works.each_with_index do |work, idx| %>
      <%= content_tag_for(:li, work) do %>
        <%= format(Translation.t('notice_show_other_works_label'), index: idx + 1).html_safe %>

        <div class="row">
          <div class="kind">
            <span class="label"><%= Translation.t('notice_works_kind') %>:</span> <span class="field"><%= work.kind %></span>
          </div>
        </div>
        <div class="row">
          <div class="description">
            <span class="label"><%= Translation.t('notice_works_complaint') %></span> <span class="field"><%= work.description %></span>
          </div>
        </div>

        <%= render 'works_urls',
                    work: work,
                    copyrighted_title: "#{Translation.t('notice_works_urls_of_original')}:",
                    infringing_title: "#{Translation.t('notice_show_works_problematic_urls')}:",
                    show_copyrighted: true,
                    show_infringing: true
        %>
      <% end %>
    <% end %>
  </ol>
</section>
