<% title Translation.t('notice_new_report') %>

<div class="inner-padding">
  <%= Translation.t('submitter_widget_notice_new_what_type') %>

  <section class="notices-list">
    <ul>
      <% @display_models.each do |model| %>
        <li data-id="<%= model.name %>"><%= model.label %></li>
      <% end %>
    </ul>
  </section>

  <section class="info-panel">
    <% @display_models.each do |model| %>
      <div data-id="<%= model.name %>">
        <article>
          <b><%= model.label %>:</b>
          <%= raw Translation.t("submitter_widget_type_descriptions_#{model.name}") %>
        </article>
        <div class="button-wrapper">
          <%=
            link_to(
              format(Translation.t('submitter_widget_notice_new_select_type_button'), type: model.label).html_safe,
              new_submitter_widget_notice_path(type: model.name, widget_settings: @widget_settings),
              class: 'button'
            )
          %>
        </div>
      </div>
    <% end %>
  </section>
</div>

<%= javascript_include_tag('iframe-resizer-server.min') %>
<%= javascript_include_tag('pace.min') %>
<%= stylesheet_link_tag('pace', :media => 'all') %>
