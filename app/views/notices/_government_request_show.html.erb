<section class="notice-body">
  <% if notice.body.present? %>
    <h5 class="title"><%= notice.customizations&.fetch('body_field_label', nil) || Translation.t('notice_show_works_gov_law_enf_body') %></h5>
    <p class="body"><pre><%= notice.redacted(:body) %></pre></p>
  <% end %>

  <% if notice.request_type.present? %>
    <dl id="request_type">
      <dt class="label"><%= Translation.t('notice_show_works_gov_law_enf_req_type') %>:</dt>
      <dd class="field"><%= notice.request_type %></dd>
    </dl>
  <% end %>

  <% if notice.regulations.present? %>
    <dl id="tags">
      <dt class="label"><%= Translation.t('notice_show_works_gov_law_enf_regulations') %>::</dt>
      <dd class="field"><%= render 'shared/tag_list', tags: notice.regulations %></dd>
    </dl>
  <% end %>
</section>

<%= render 'works', notice: notice %>
