<section class="notice-body">
  <% if notice.body.present? %>
    <h5 class="title">Explanation of Court Order</h5>
    <p class="body"><pre><%= notice.redacted(:body) %></pre></p>
  <% end %>

  <% if notice.regulation_list.present? %>
    <dl id="tags">
      <dt class="label">Laws Referenced by Court Order:</dt>
      <dd class="field"><%= render 'shared/tag_list', tags: notice.regulations %></dd>
    </dl>
  <% end %>

  <% if notice.case_id_number.present? %>
    <dl id="request_type">
      <dt class="label">Case ID #:</dt>
      <dd class="field"><%= notice.case_id_number %></dd>
    </dl>
  <% end %>
</section>

<%= render works_partial_for(notice), works: notice.works %>
