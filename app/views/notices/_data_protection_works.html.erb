<section class="works">
  <ol id="works" class="copyright-claims">
    <% works.each_with_index do |work, idx| %>
      <%= content_tag_for(:li, work) do %>
        <%= Translation.t('notice_show_data_protection_works_label').html_safe %>

        <%= render 'works_urls',
                    work: work,
                    infringing_title: "#{Translation.t('notice_show_data_protection_works_infringing_label')}:",
                    show_copyrighted: false,
                    show_infringing: true
        %>
      <% end %>
    <% end %>
	This user requested removal of <%= @notice.url_count.nil? ? "unspecified" : @notice.url_count %> URLs.
  </ol>
</section>
